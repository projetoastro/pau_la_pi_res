@model PaulaPires.Models.ModeloAudios
<article class="miolo">
    <nav>
        <h1 class="tit size-25">@Model.CategoriaNome</h1>
        <div class="cl">
        </div>
        <div class="sub">
            @foreach (var item in @Model.SubCategoria)
            {
                <a href="/@item.CategoriaId.UrlAmigavel/@item.UrlAmigavel/@item.Pagina.UrlAmigavel">@item.Nome</a>
            }
            @*<a href="#" class="selected">Perfil</a>*@
        </div>
        <div class="cl">
        </div>
        <div class="size">
        </div>
        <div class="cl">
        </div>
    </nav>
    <a href="javascript:history.back()" class="btn-voltar">Voltar</a>
    <div class="audio">
        <audio id="player2" src="@Html.Raw(HttpUtility.HtmlDecode(Model.Conteudo))" type="audio/mp3" controls>
            <script>                $('.audio audio,.audio video').mediaelementplayer({ audioWidth: 555 });</script>
    </div>
    <div class="share">
        <div class="share-fb">
            <div class="fb-share-button" data-href="http://astrologiaalquimica.com.br/_temp/"
                data-type="button_count">
            </div>
        </div>
        <div class="share-tw">
            <a href="http://astrologiaalquimica.com.br/_temp/" class="twitter-share-button" data-via="Paula Pires"
                data-lang="en">Tweet</a></div>
        <div class="share-go">
            <div class="g-plus" data-action="share" data-annotation="bubble" data-href="http://astrologiaalquimica.com.br/_temp/">
            </div>
        </div>
        <div class="cl">
        </div>
        <div class="comments-fb">
            <div class="fb-comments" data-href="http://astrologiaalquimica.com.br/_temp/" data-width="555"
                data-numposts="1" data-colorscheme="light">
            </div>
        </div>
        <!--
            <div class="comments-go"><div class="g-comments" data-href="http://astrologiaalquimica.com.br/_temp/" data-width="555" data-first_party_property="BLOGGER" data-view_type="FILTERED_POSTMOD"></div></div>
            -->
    </div>
</article>
@section headcustom
{
    <!-- audio -->
    <script src="/player/build/jquery.js"></script>
    <script src="/player/build/mediaelement-and-player.min.js"></script>
    <link rel="stylesheet" href="/player/build/mediaelementplayer.min.css" />
    <!-- audio -->
}
