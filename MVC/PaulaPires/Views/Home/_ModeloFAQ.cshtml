@model PaulaPires.Models.ModeloFAQ
<article class="miolo">
    <nav>
        <h1 class="tit size-25">@Model.CategoriaNome</h1>
        <div class="cl">
        </div>
        <div class="sub">
            @foreach (var item in @Model.SubCategoria)
            {
                <a href="/@item.CategoriaId.UrlAmigavel/@item.UrlAmigavel/@item.Pagina.UrlAmigavel">@item.Pagina.TituloMenu</a>
            }
            @*<a href="#" class="selected">Perfil</a>*@
        </div>

        <div class="cl">
        </div>
        <div class="size">
            <a href="javascript:sizeMenos()" class="size-menos">-A</a> &nbsp;<a href="javascript:sizeMais()"
                class="size-mais">+A</a></div>
        <div class="cl">
        </div>
    </nav>
    <h2>@Model.Pagina.TituloMenu</h2>
    <div class="duvida">
        <ul>
            @foreach (var item in @Model.FAQS)
            {
                <li>
                    <h3>
                        @item.Pergunta</h3>
                    <b>R:</b> @item.Resposta
                </li>
            }
        </ul>
        <p>
            <h2>
                Envie sua dúvida</h2>
        </p>
        <form name="contato" method="post" action="?">
        <fieldset>
            <legend>Nome:</legend>
            <input type="text" name="nome" class="required">
        </fieldset>
        <fieldset>
            <legend>E-mail:</legend>
            <input type="text" name="email" class="required email">
        </fieldset>
        <fieldset>
            <legend>Dúvida:</legend>
            <textarea name="duvida" class="required"></textarea>
        </fieldset>
        <div class="enviar">
            <input type="submit" name="enviar" value="Enviar >">
        </div>
        </form>
    </div>
    <div class="share">
        <div class="share-fb">
            <div class="fb-share-button" data-href="http://astrologiaalquimica.com.br/_temp/"
                data-type="button_count">
            </div>
        </div>
        <div class="share-tw">
            <a href="http://astrologiaalquimica.com.br/_temp/" class="twitter-share-button" data-via="Paula Pires"
                data-lang="en">Tweet</a></div>
        <div class="share-go">
            <div class="g-plus" data-action="share" data-annotation="bubble" data-href="http://astrologiaalquimica.com.br/_temp/">
            </div>
        </div>
        <div class="cl">
        </div>
        <div class="comments-fb">
            <div class="fb-comments" data-href="http://astrologiaalquimica.com.br/_temp/" data-width="555"
                data-numposts="1" data-colorscheme="light">
            </div>
        </div>
        <!--
                <div class="comments-go"><div class="g-comments" data-href="http://astrologiaalquimica.com.br/_temp/" data-width="555" data-first_party_property="BLOGGER" data-view_type="FILTERED_POSTMOD"></div></div>
-->
    </div>
</article>
