@model PaulaPires.Models.SubCategorias

@{
    ViewBag.Title = "Cadastro de outras categorias";
    Layout = "~/Areas/administrador/Views/Shared/_Layout.cshtml";
}

<div class="portlet box">
    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        @using (Html.BeginForm("Cadastrar", "SubCategorias", FormMethod.Post, new { @class = "form-horizontal form-row-seperated", @id = "cadastrar_categoria", @role = "form", enctype = "multipart/form-data" }))
        {           
            <input type="hidden" name="Actived" id="Actived" />
            <input type="hidden" name="MostraSubMenu" id="MostraSubMenu" />
            <input type="hidden" name="MostraMenuTratamento" id="MostraMenuTratamento" />
            <input type="hidden" name="Id" id="Id" value="@Model.Id"/>
             
            <div class="form-body">
                <div class="alert alert-danger display-hide">
                    <button class="close" data-close="alert"></button>
                    Favor corrigir os erros do formulário antes de enviá-lo.
                </div>
                <div class="alert alert-success display-hide">
                    <button class="close" data-close="alert"></button>
                    Formulário enviado com sucesso!
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Categoria</label>
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.CategoriaIdValue, new SelectList(ViewBag.Categorias, "Id", "Nome"), "Selecione", new { @class = "form-control select2me", @name = "CategoriaIdValue" })
                        <span class="help-block">Categoria do site onde o item vai aparecer
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Nome</label>
                    <div class="col-md-9">
                        <input type="text" name="Nome" id="Nome" placeholder="nome" class="form-control" data-required="1" value="@Model.Nome" />
                        <span class="help-block">Nome que vai aparecer dentro da categoria selecionada acima
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Url Amigável</label>
                    <div class="col-md-9">
                        <input type="text" id="UrlAmigavel" name="UrlAmigavel" placeholder="url amigável" class="form-control" value="@Model.UrlAmigavel" />
                        <span class="help-block">Url que deve aparecer no ítem do site
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Ordem</label>
                    <div class="col-md-9">
                        <div id="spinner1">
                            <div class="input-group input-small">
                                <input type="text" name="Orderby" id="Orderby" class="spinner-input form-control" maxlength="3" value="@Model.Orderby">
                                <div class="spinner-buttons input-group-btn btn-group-vertical">
                                    <button type="button" class="btn spinner-up btn-xs blue">
                                        <i class="fa fa-angle-up"></i>
                                    </button>
                                    <button type="button" class="btn spinner-down btn-xs blue">
                                        <i class="fa fa-angle-down"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <span class="help-block">Ordem do item a ser apresentado
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Mostra no submenu</label>
                    <div class="col-md-9">
                        <input type="checkbox" checked class="make-switch switch-small mostrasubmenu" name="MostraSubMenuValue" id="MostraSubMenuValue">
                        <span class="help-block">Mostrar categoria no submenu da categoria específica
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Mostra nos ítens do tratamento</label>
                    <div class="col-md-9">
                        <input type="checkbox" checked class="make-switch switch-small MostraMenuTratamento" name="MostraMenuTratamentoValue" id="MostraMenuTratamentoValue">
                        <span class="help-block">Mostrar nos ítens do lado direito das páginas de tratamento
                        </span>
                    </div>
                </div>
                <div class="form-group last">
                    <label class="control-label col-md-3">Ativo</label>
                    <div class="col-md-9">
                        <input type="checkbox" checked class="make-switch switch-small" name="ActivedValue" id="ActivedValue">
                    </div>
                </div>
            </div>
            <div class="form-actions fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn green"><i class="fa fa-pencil"></i>Salvar</button>
                            <a href="@Url.Action("Index", "SubCategorias", new { area = "administrador" })" class="btn default">Cancelar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        <!-- END FORM-->
    </div>
</div>

@section pageTitle{
    Categorias <small>Cadastro de outras categorias</small>
}
@section breadcrumb{
        <li>Configurações
        <i class="fa fa-angle-right"></i>
    </li>
    <li>
        <a href="@Url.Action("Index", "SubCategorias", new { area = "administrador" })">Outras categorias
        </a>
        <i class="fa fa-angle-right"></i>
    </li>

    @if (Model.Id > 0)
    {
        <li><a href="@Url.Action("Visualizar", "SubCategorias", new { area = "administrador", @pId = @Model.Id })">@Model.Nome</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>Editar outras categoria</li>
    }
    else
    {
        <li>Cadastrar outras categoria</li>
    }

}
@section pagelevelpluginstyles{
    <link rel="stylesheet" type="text/css" href="/Areas/administrador/assets/plugins/select2/select2.css" />
    <link rel="stylesheet" type="text/css" href="/Areas/administrador/assets/plugins/select2/select2-metronic.css" />
    <link rel="stylesheet" type="text/css" href="/Areas/administrador/assets/plugins/bootstrap-fileinput/bootstrap-fileinput.css" />
    <link rel="stylesheet" type="text/css" href="/Areas/administrador/assets/plugins/bootstrap-switch/css/bootstrap-switch.min.css" />
    <link rel="stylesheet" type="text/css" href="/Areas/administrador/assets/plugins/jquery-tags-input/jquery.tagsinput.css" />
    <link rel="stylesheet" type="text/css" href="/Areas/administrador/assets/plugins/bootstrap-markdown/css/bootstrap-markdown.min.css">
    <link rel="stylesheet" type="text/css" href="/Areas/administrador/assets/plugins/typeahead/typeahead.css">
}
@section scriptsinline{
    <script>
        jQuery(document).ready(function () {
            FormSamples.init();
            ComponentsFormTools.init();
            FormValidation.init();

            $('#ActivedValue').on('switch-change', function (event, state) {
                $("#Actived").val(state.value);
            });

            @if (!@Model.Actived)
            {
                @:$('#ActivedValue').bootstrapSwitch('setState', false, false);
            }

            $('#MostraSubMenuValue').on('switch-change', function (event, state) {
                $("#MostraSubMenu").val(state.value);
            });

            @if (!@Model.MostraSubMenu)
            {
                @:$('#MostraSubMenuValue').bootstrapSwitch('setState', false, false);
            }
            
            $('#MostraMenuTratamentoValue').on('switch-change', function (event, state) {
                $("#MostraMenuTratamento").val(state.value);
            });

            @if (!@Model.MostraMenuTratamento)
            {
                @:$('#MostraMenuTratamentoValue').bootstrapSwitch('setState', false, false);
            }

            var spinner = $("#spinner1").spinner();

            $('#spinner1').click(function () {
                var spinnerValor = spinner.spinner("value");
                var idCategoria = $('#Id').val();
                var idSecao = $('#SecaoIdValue').val();
                $.ajax({
                    type: "POST",
                    url: "/administrador/OutrasCategorias/ValidaOrdem",
                    data: { pCategoriaId: idCategoria, pOrderBy: spinnerValor, pSecaoId: idSecao },
                    success: function (result) {
                        if (result) {
                            console.log(result);
                            //alert("Esta ordem está indisponível para esse tipo de categoria");
                            //spinner.spinner("value", '');
                        }
                    },
                    dataType: "JSON"
                });

            });
        });

    </script>
}
