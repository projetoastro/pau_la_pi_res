    <script src="/Areas/administrador/assets/plugins/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <script src="/Areas/administrador/assets/plugins/jquery.blockui.min.js" type="text/javascript"></script>
    <script src="/Areas/administrador/assets/plugins/jquery.cokie.min.js" type="text/javascript"></script>
    <script src="/Areas/administrador/assets/plugins/uniform/jquery.uniform.min.js" type="text/javascript"></script>
    <!-- END CORE PLUGINS -->
