    <script src="/Areas/administrador/assets/plugins/jquery.cokie.min.js" type="text/javascript"></script>
    <script src="/Areas/administrador/assets/plugins/uniform/jquery.uniform.min.js" type="text/javascript"></script>
    <script src="/Areas/administrador/assets/scripts/paulapires/padrao.js" type="text/javascript"></script>
