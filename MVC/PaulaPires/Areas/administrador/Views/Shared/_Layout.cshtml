<!-- BEGIN BODY -->
<body class="page-header-fixed">
    <!-- BEGIN HEADER -->
    <div class="header navbar navbar-fixed-top">
        <!-- BEGIN TOP NAVIGATION BAR -->
        <div class="header-inner">
            <!-- BEGIN LOGO -->
            <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "administrador" })">
                <img src="/Areas/administrador/assets/img/logo.png" alt="logo" class="img-responsive" />
            </a>
            <!-- END LOGO -->
            <!-- BEGIN RESPONSIVE MENU TOGGLER -->
            <a href="javascript:;" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <img src="/Areas/administrador/assets/img/menu-toggler.png" alt="" />
            </a>
            <!-- END RESPONSIVE MENU TOGGLER -->
            <!-- BEGIN TOP NAVIGATION MENU -->
            <ul class="nav navbar-nav pull-right">
                <!-- BEGIN USER LOGIN DROPDOWN -->
                <li class="dropdown user"><a href="#" class="dropdown-toggle" data-toggle="dropdown"
                    data-hover="dropdown" data-close-others="true">
                    <img alt="" src="/Areas/administrador/assets/img/avatar1_small.jpg" />
                    <span class="username">
                        @user.Nome
                    </span><i class="fa fa-angle-down"></i></a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Logout", "Login", new { area = "administrador" })"><i class="fa fa-key">
                        </i>Log Out </a></li>
                    </ul>
                </li>
                <!-- END USER LOGIN DROPDOWN -->
            </ul>
            <!-- END TOP NAVIGATION MENU -->
        </div>
        <!-- END TOP NAVIGATION BAR -->
    </div>
    <!-- END HEADER -->
    <div class="clearfix">
    </div>
    <!-- BEGIN CONTAINER -->
    <div class="page-container">
        <!-- BEGIN SIDEBAR -->
        <div class="page-sidebar-wrapper">
            <div class="page-sidebar navbar-collapse collapse">
                <!-- add "navbar-no-scroll" class to disable the scrolling of the sidebar menu -->
                <!-- BEGIN SIDEBAR MENU -->
                <ul class="page-sidebar-menu" data-auto-scroll="true" data-slide-speed="200">
                    <li class="sidebar-toggler-wrapper">
                        <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
                        <div class="sidebar-toggler hidden-phone">
                        </div>
                        <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
                    </li>
                    <li class="arrow">
                        <br />
                    </li>
                    <li class="start"><a href="@Url.Action("Index", "Home", new { area = "administrador" })">
                        <i class="fa fa-home"></i><span class="title">Dashboard </span>@*<span class="selected"></span>*@
                    </a></li>
                    <li><a href="javascript:;"><i class="fa fa-folder-o"></i><span class="title">Conteúdo
                    </span><span class="arrow"></span></a>
                        <ul class="sub-menu">
                            <li class="tooltips" data-container="body" data-placement="right" data-html="true"
                                data-original-title="Lista de páginas do site"><a href="@Url.Action("Index", "Paginas", new { area = "administrador" })">
                                    <i class="fa fa-code"></i>Páginas </a></li>
                            <li class="tooltips" data-container="body" data-placement="right" data-html="true"
                                data-original-title="Lista os vídeos cadastrados"><a href="#" target="_blank"><i
                                    class="fa fa-youtube-play"></i>Links de vídeos </a></li>
                        </ul>
                    </li>
                    <li><a href="javascript:;"><i class="fa fa-cogs"></i><span class="title">Configurações
                    </span><span class="arrow"></span></a>
                        <ul class="sub-menu">
                            <li class="tooltips" data-container="body" data-placement="right" data-html="true"
                                data-original-title="Lista de seções do site"><a href="@Url.Action("Index", "Secoes", new { area = "administrador" })">
                                    <i class="fa fa-desktop"></i>Seções </a></li>
                            <li class="tooltips" data-container="body" data-placement="right" data-html="true"
                                data-original-title="Lista de categorias"><a href="@Url.Action("Index", "Categorias", new { area = "administrador" })">
                                    <i class="fa fa-briefcase"></i>Categorias principais </a></li>
                            <li class="tooltips" data-container="body" data-placement="right" data-html="true"
                                data-original-title="Lista das outras categorias"><a href="@Url.Action("Index", "SubCategorias", new { area = "administrador" })">
                                    <i class="fa fa-briefcase"></i>Outras categorias </a></li>
                            <li class="tooltips" data-container="body" data-placement="right" data-html="true"
                                data-original-title="Lista dos modelos das páginas"><a href="@Url.Action("Index", "ModelosPaginas", new { area = "administrador" })">
                                    <i class="fa fa-briefcase"></i>Modelos de páginas </a></li>
                            <li class="tooltips" data-container="body" data-placement="right" data-html="true"
                                data-original-title="Lista dos signos cadastrados"><a href="@Url.Action("Index", "Signos", new { area = "administrador" })">
                                    <i class="fa fa-briefcase"></i>Signos </a></li>
                        </ul>
                    </li>
                    <li><a href="javascript:;"><i class="fa fa-gift"></i><span class="title">Menu base </span>
                        <span class="arrow"></span></a>
                        <ul class="sub-menu">
                            <li class="tooltips" data-container="body" data-placement="right" data-html="true"
                                data-original-title="Tooltip para o menu 001"><a href="#" target="_blank"><i class="fa fa-briefcase">
                                </i><span class="badge badge-warning badge-roundless">novo </span>Item 001 </a>
                            </li>
                            <li class="tooltips" data-container="body" data-placement="right" data-html="true"
                                data-original-title="Tooltip para o menu 001"><a href="#" target="_blank"><i class="fa fa-briefcase">
                                </i><span class="badge badge-info">4 </span>Item 002 </a></li>
                        </ul>
                    </li>
                    <li class="last "><a href="#"><i class="fa fa-bar-chart-o"></i><span class="title">Último
                        ítem </span></a></li>
                </ul>
                <!-- END SIDEBAR MENU -->
            </div>
        </div>
        <!-- END SIDEBAR -->
        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">
            <div class="page-content">
                <!-- BEGIN ERROR -->
