    <!-- BEGIN THEME STYLES -->
    <link href="/Areas/administrador/assets/css/style-metronic.css" rel="stylesheet"
        type="text/css" />
    <link href="/Areas/administrador/assets/css/style.css" rel="stylesheet" type="text/css" />
    <link href="/Areas/administrador/assets/css/style-responsive.css" rel="stylesheet"
        type="text/css" />
    <link href="/Areas/administrador/assets/css/plugins.css" rel="stylesheet" type="text/css" />
    <link href="/Areas/administrador/assets/css/pages/tasks.css" rel="stylesheet" type="text/css" />
