        rel="stylesheet" type="text/css" />
    <link href="/Areas/administrador/assets/plugins/uniform/css/uniform.default.css"
        rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN PAGE LEVEL PLUGIN STYLES -->
    @RenderSection("pagelevelpluginstyles", required: false)
