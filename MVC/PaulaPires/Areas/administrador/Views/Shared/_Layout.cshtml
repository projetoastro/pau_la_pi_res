                        <strong><i class="icon-remove"></i>Aviso: </strong>Ocorreu o erro <strong>@viewModel.ErrorNumber</strong>
                        favor avisar o administrador do sistema.
                        <br>
                    </div>
                }*@
                <!-- END ERROR -->
                <!-- BEGIN PAGE HEADER-->
                <div class="row">
                    <div class="col-md-12">
                        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
                        <h3 class="page-title">
                            @RenderSection("pageTitle", required: true)
                        </h3>
                        <ul class="page-breadcrumb breadcrumb">
                            <li><i class="fa fa-home"></i><a href="@Url.Action("Index", "Home", new { area = "administrador" })">
                                Dashboard </a><i class="fa fa-angle-right"></i></li>
                            @RenderSection("breadcrumb", required: true)
                        </ul>
                        <!-- END PAGE TITLE & BREADCRUMB-->
                    </div>
                </div>
                <!-- END PAGE HEADER-->
                <!-- BEGIN PAGE CONTENT-->
                @RenderBody()
                <!-- END PAGE CONTENT-->
            </div>
        </div>
        <!-- END CONTENT -->
    </div>
    <!-- END CONTAINER -->
    <!-- BEGIN FOOTER -->
    <div class="footer">
        <div class="footer-inner">
            2014 &copy; Paula Pires
        </div>
        <div class="footer-tools">
            <span class="go-top"><i class="fa fa-angle-up"></i></span>
        </div>
    </div>
