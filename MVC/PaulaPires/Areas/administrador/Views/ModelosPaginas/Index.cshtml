@{
    ViewBag.Title = "Modelos de páginas";
    Layout = "~/Areas/administrador/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Modelos de páginas
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover" id="sample_1">
                    <thead>
                        <tr>
                            <th>Id
                            </th>
                            <th>Nome
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in @ViewBag.modelos)
                        {
                            <tr class="odd gradeX">                            
                                <td>@item.Id
                                </td>
                                <td>
                                    @item.Nome
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>


@section pageTitle{
    Modelos <small>Lista dos modelos de páginas do site</small>
}
@section breadcrumb{
        <li>Configurações
        <i class="fa fa-angle-right"></i>
    </li>
    <li>Modelos de páginas
    </li>
}
@section pagelevelpluginstyles{
    <link rel="stylesheet" type="text/css" href="/Areas/administrador/assets/plugins/select2/select2.css" />
    <link rel="stylesheet" type="text/css" href="/Areas/administrador/assets/plugins/select2/select2-metronic.css" />
    <link rel="stylesheet" href="/Areas/administrador/assets/plugins/data-tables/DT_bootstrap.css" />
}
